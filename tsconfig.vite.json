{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "middleware.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase/**/*",
    "adgo-app/**/*",
    "agent/**/*",
    "scripts/**/*",
    "server/**/*",
    "types/**/*",
    ".next",
    "dist"
  ]
}