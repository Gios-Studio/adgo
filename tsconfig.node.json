  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./.tsbuild/node",
    "tsBuildInfoFile": "./.tsbuild/node.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", ".next"]
}